<?xml version="1.0" encoding="utf-8"?>
<!-- 
    FileProvider paths configuration for image_cropper
    
    This file defines the paths where the app can share files with other apps
    (like the image cropper). Required for Android 7.0+ (API 24+) due to 
    FileUriExposedException security restrictions.
-->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 
        Cache directory path
        Used for temporary image files during cropping process
        Path: /data/data/{package_name}/cache/
    -->
    <cache-path name="cache" path="." />
    
    <!-- 
        External cache directory path
        Used for temporary files on external storage
        Path: /storage/emulated/0/Android/data/{package_name}/cache/
    -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- 
        External files directory path
        Used for app-specific files on external storage
        Path: /storage/emulated/0/Android/data/{package_name}/files/
    -->
    <external-path name="external_files" path="." />
    
    <!-- 
        Files directory path
        Used for internal app files
        Path: /data/data/{package_name}/files/
    -->
    <files-path name="files" path="." />
    
    <!-- 
        External storage root path
        Used for accessing external storage root (if needed)
        Path: /storage/emulated/0/
    -->
    <external-path name="external" path="." />
</paths>
