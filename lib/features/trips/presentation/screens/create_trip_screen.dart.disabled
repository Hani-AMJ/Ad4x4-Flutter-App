  Future<void> _loadExistingTrip() async {
    if (widget.tripId == null) return;
    
    setState(() => _isLoading = true);
    
    try {
      // TODO: Replace with actual API call
      // final repo = ref.read(mainApiRepositoryProvider);
      // final trip = await repo.getTripById(widget.tripId!);
      
      // For now, use sample data
      final trip = SampleTrips.getTripById(widget.tripId!);
      
      setState(() {
        _existingTrip = trip;
        
        // Populate form fields
        _titleController.text = trip.title;
        _descriptionController.text = trip.description;
        _locationController.text = trip.location;
        _maxParticipantsController.text = trip.maxParticipants.toString();
        _requirementsController.text = trip.requirements.join(', ');
        
        // Set dates and times
        _selectedStartDate = DateTime(
          trip.startTime.year,
          trip.startTime.month,
          trip.startTime.day,
        );
        _selectedStartTime = TimeOfDay(
          hour: trip.startTime.hour,
          minute: trip.startTime.minute,
        );
        
        _selectedEndDate = DateTime(
          trip.endTime.year,
          trip.endTime.month,
          trip.endTime.day,
        );
        _selectedEndTime = TimeOfDay(
          hour: trip.endTime.hour,
          minute: trip.endTime.minute,
        );
        
        // Set cutoff if available
        if (trip.cutOff != null) {
          _selectedCutoffDate = DateTime(
            trip.cutOff!.year,
            trip.cutOff!.month,
            trip.cutOff!.day,
          );
          _selectedCutoffTime = TimeOfDay(
            hour: trip.cutOff!.hour,
            minute: trip.cutOff!.minute,
          );
        }
        
        // Find and set meeting point and level
        // Wait for meeting points and levels to load first
        Future.delayed(const Duration(milliseconds: 100), () {
          if (_meetingPoints.isNotEmpty) {
            // Match by name since we don't have IDs in sample data
            _selectedMeetingPoint = _meetingPoints.firstWhere(
              (mp) => mp.name.toLowerCase().contains(trip.meetingPoint.toLowerCase()),
              orElse: () => _meetingPoints.first,
            );
          }
          
          if (_levels.isNotEmpty) {
            // Match by difficulty name
            _selectedLevel = _levels.firstWhere(
              (level) => level.name.toLowerCase() == trip.difficulty.toLowerCase(),
              orElse: () => _levels.first,
            );
          }
          
          setState(() {});
        });
        
        _isLoading = false;
      });
    } catch (e) {
      setState(() => _isLoading = false);
      
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Failed to load trip: $e'),
            backgroundColor: Colors.red,
          ),
        );
      }
    }
  }

