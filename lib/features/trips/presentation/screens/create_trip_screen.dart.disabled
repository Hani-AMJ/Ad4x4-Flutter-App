class _MeetingPointSelectorSheet extends StatefulWidget {
  final List<MeetingPoint> meetingPoints;
  final MeetingPoint? selectedMeetingPoint;
  final ValueChanged<MeetingPoint> onSelected;

  const _MeetingPointSelectorSheet({
    required this.meetingPoints,
    required this.selectedMeetingPoint,
    required this.onSelected,
  });

  @override
  State<_MeetingPointSelectorSheet> createState() => _MeetingPointSelectorSheetState();
}

class _MeetingPointSelectorSheetState extends State<_MeetingPointSelectorSheet> {
  late List<MeetingPoint> _filteredMeetingPoints;
  final _searchController = TextEditingController();

  @override
  void initState() {
    super.initState();
    _filteredMeetingPoints = widget.meetingPoints;
  }

  @override
  void dispose() {
    _searchController.dispose();
    super.dispose();
  }

  void _filterMeetingPoints(String query) {
    setState(() {
      if (query.isEmpty) {
        _filteredMeetingPoints = widget.meetingPoints;
      } else {
        _filteredMeetingPoints = widget.meetingPoints.where((mp) {
          return mp.name.toLowerCase().contains(query.toLowerCase()) ||
              mp.area.toLowerCase().contains(query.toLowerCase());
        }).toList();
      }
    });
  }

  @override
  Widget build(BuildContext context) {
    final theme = Theme.of(context);
    final colors = theme.colorScheme;

    return Container(
      height: MediaQuery.of(context).size.height * 0.75,
      decoration: BoxDecoration(
        color: colors.surface,
        borderRadius: const BorderRadius.vertical(top: Radius.circular(20)),
      ),
      child: Column(
        children: [
          // Drag handle
          Padding(
            padding: const EdgeInsets.only(top: 12),
            child: Container(
              width: 40,
              height: 4,
              decoration: BoxDecoration(
                color: colors.onSurface.withValues(alpha: 0.3),
                borderRadius: BorderRadius.circular(2),
              ),
            ),
          ),
          
          // Header
          Padding(
            padding: const EdgeInsets.all(16),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  'Select Meeting Point',
                  style: theme.textTheme.titleLarge?.copyWith(
                    fontWeight: FontWeight.bold,
                  ),
                ),
                const SizedBox(height: 16),
                
                // Search field
                TextField(
                  controller: _searchController,
                  onChanged: _filterMeetingPoints,
                  decoration: InputDecoration(
                    hintText: 'Search by name or area...',
                    prefixIcon: const Icon(Icons.search),
                    filled: true,
                    fillColor: colors.surfaceContainerHighest,
                    border: OutlineInputBorder(
                      borderRadius: BorderRadius.circular(12),
                      borderSide: BorderSide.none,
                    ),
                  ),
                ),
              ],
            ),
          ),
          
          // Meeting points list
          Expanded(
            child: ListView.builder(
              padding: const EdgeInsets.symmetric(horizontal: 16),
              itemCount: _filteredMeetingPoints.length,
              itemBuilder: (context, index) {
                final mp = _filteredMeetingPoints[index];
                final isSelected = widget.selectedMeetingPoint?.id == mp.id;
                
                return Card(
                  margin: const EdgeInsets.only(bottom: 8),
                  elevation: isSelected ? 4 : 1,
                  color: isSelected
                      ? colors.primaryContainer
                      : colors.surface,
                  child: ListTile(
                    onTap: () => widget.onSelected(mp),
                    leading: Container(
                      padding: const EdgeInsets.all(8),
                      decoration: BoxDecoration(
                        color: isSelected
                            ? colors.primary.withValues(alpha: 0.2)
                            : colors.surfaceContainerHighest,
                        borderRadius: BorderRadius.circular(8),
                      ),
                      child: Icon(
                        Icons.place,
                        color: isSelected ? colors.primary : colors.onSurface,
                      ),
                    ),
                    title: Text(
                      mp.name,
                      style: TextStyle(
                        fontWeight: isSelected ? FontWeight.bold : FontWeight.w500,
                      ),
                    ),
                    subtitle: Text('Area: ${mp.area}'),
                    trailing: isSelected
                        ? Icon(Icons.check_circle, color: colors.primary)
                        : null,
                  ),
                );
              },
            ),
          ),
        ],
      ),
    );
  }
}

