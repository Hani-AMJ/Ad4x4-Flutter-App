  Widget _buildDifficultyBadge() {
    final theme = Theme.of(context);
    Color badgeColor;
    int starCount;
    String levelText;
    IconData iconType;
    bool isANIT = false;

    switch (_trip!.difficulty.toLowerCase()) {
      case 'anit':
        badgeColor = const Color(0xFF4CAF50); // Green
        starCount = 0;
        levelText = 'ANIT (All New Into Trip)';
        iconType = Icons.school;
        isANIT = true;
        break;
      case 'easy':
        badgeColor = const Color(0xFF42B883); // Green
        starCount = 1;
        levelText = 'Newbie/Club Event';
        iconType = Icons.star;
        break;
      case 'medium':
        badgeColor = const Color(0xFFFFC107); // Amber
        starCount = 2;
        levelText = 'Intermediate';
        iconType = Icons.star;
        break;
      case 'hard':
        badgeColor = const Color(0xFFFF9800); // Orange
        starCount = 3;
        levelText = 'Advanced';
        iconType = Icons.star;
        break;
      case 'expert':
        badgeColor = const Color(0xFFE53935); // Red
        starCount = 4;
        levelText = 'Expert/Explorer/Marshal';
        iconType = Icons.star;
        break;
      default:
        badgeColor = const Color(0xFF64B5F6);
        starCount = 1;
        levelText = 'Unknown';
        iconType = Icons.star;
    }

    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 16, vertical: 8),
      decoration: BoxDecoration(
        color: badgeColor.withValues(alpha: 0.2),
        borderRadius: BorderRadius.circular(20),
      ),
      child: Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          // ANIT icon or Star icons based on difficulty
          if (isANIT)
            Padding(
              padding: const EdgeInsets.only(right: 8),
              child: Icon(
                iconType,
                size: 18,
                color: badgeColor,
              ),
            )
          else
            ...List.generate(starCount, (index) => Padding(
              padding: EdgeInsets.only(right: index < starCount - 1 ? 2 : 8),
              child: Icon(
                Icons.star,
                size: 18,
                color: badgeColor,
              ),
            )),
          Text(
            levelText,
            style: theme.textTheme.labelLarge?.copyWith(
              color: badgeColor,
              fontWeight: FontWeight.bold,
              fontSize: 13,
            ),
          ),
        ],
      ),
    );
  }
