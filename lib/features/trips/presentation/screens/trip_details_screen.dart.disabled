  Future<void> _loadTripDetails() async {
    setState(() {
      _isLoading = true;
      _errorMessage = null;
    });

    try {
      // Simulate network delay
      await Future.delayed(const Duration(milliseconds: 800));

      // TODO: Replace with actual API call
      // Simulate potential error (uncomment to test error state)
      // if (widget.tripId == 'invalid') {
      //   throw Exception('Trip not found');
      // }

      final trip = SampleTrips.getTripById(widget.tripId);

      setState(() {
        _trip = trip;
        _isJoined = trip.isJoined;
        _isLoading = false;
        _errorMessage = null;
      });
    } catch (e) {
      setState(() {
        _isLoading = false;
        _errorMessage = e.toString();
      });
    }
  }

  Future<void> _handleJoinTrip() async {
    setState(() => _isLoading = true);

    // TODO: Implement actual join/leave trip API call
    await Future.delayed(const Duration(seconds: 1));

    if (mounted) {
      setState(() {
        _isJoined = !_isJoined;
        if (_trip != null) {
          _trip = _trip!.copyWith(
            isJoined: _isJoined,
            participants: _isJoined
                ? _trip!.participants + 1
                : _trip!.participants - 1,
          );
        }
        _isLoading = false;
      });

      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text(_isJoined ? 'Joined trip successfully!' : 'Left trip'),
          backgroundColor: _isJoined ? const Color(0xFF42B883) : null,
        ),
      );
    }
  }

